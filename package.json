{
  "name": "react-native-rotation-detector",
  "version": "1.0.1",
  "description": "Detect real device rotation angles (0째, 90째, 180째, 270째) in React Native with lightweight native code for iOS and Android.",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index.tsx",
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "types": "./lib/typescript/src/index.d.ts",
      "require": "./lib/commonjs/index.js",
      "import": "./lib/module/index.js",
      "react-native": "./src/index.tsx",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib/",
    "src/",
    "android/",
    "ios/",
    "cpp/",
    "README.md",
    "LICENSE",
    "package.json",
    "*.podspec"
  ],
  "scripts": {
    "example": "yarn workspace react-native-rotation-detector-example",
    "test": "jest",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "prepare": "bob build",
    "release": "release-it --only-version"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "rotation",
    "orientation",
    "device-rotation",
    "turbo-module",
    "native-module",
    "react-native-library",
    "device-orientation",
    "screen-rotation",
    "auto-linking",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrese03/react-native-rotation-detector.git",
    "directory": "."
  },
  "author": "Andres Encarnacion Ortiz <andrese03@users.noreply.github.com> (https://github.com/andrese03)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andrese03/react-native-rotation-detector/issues"
  },
  "homepage": "https://github.com/andrese03/react-native-rotation-detector#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/andrese03"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native-community/cli": "15.0.0-alpha.2",
    "@react-native/babel-preset": "0.79.2",
    "@react-native/eslint-config": "^0.78.0",
    "@release-it/conventional-changelog": "^9.0.2",
    "@types/jest": "^29.5.5",
    "@types/react": "^19.0.0",
    "commitlint": "^19.6.1",
    "del-cli": "^5.1.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "react": "19.0.0",
    "react-native": "0.79.2",
    "react-native-builder-bob": "^0.30.2",
    "release-it": "^17.10.0",
    "turbo": "^1.10.7",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "esm": true
        }
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "RotationDetectorSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.rotationdetector"
    }
  },
  "create-react-native-library": {
    "template": "typescript",
    "languages": "kotlin-objc",
    "type": "turbo-module",
    "version": "0.52.1"
  }
}
